<h1>Editing '<%= @post.title %>'</h1>

<%= simple_form_for @post do |form| %>
	<%= form.input :title %>
	<%= form.input :body %>
	<%= form.input :publication, label: "Where first published" %>
	<%= form.input :published_at, label: "Date of first publication" %>
	<%= form.input :url, label: "Link to publication"%>
	<%= form.input :pull_quote %>

	<%= form.button :submit %>

	<% end %>